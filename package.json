{
  "name": "shopify-money-format-utils",
  "version": "1.0.4",
  "description": "Lightweight Shopify money formatting and parsing utilities for multi-currency theme development.",
  "type": "module",
  "main": "dist/shopify-money-format-utils.cjs.js",
  "module": "dist/shopify-money-format-utils.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/shopify-money-format-utils.es.js",
      "require": "./dist/shopify-money-format-utils.cjs.js",
      "default": "./dist/shopify-money-format-utils.es.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:dist": "vitest run src/dist-entry.test.js",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "pretest": "pnpm run typecheck",
    "prepublishOnly": "pnpm run typecheck && pnpm run test && pnpm run build"
  },
  "keywords": [
    "shopify",
    "shopify-theme",
    "money-format",
    "currency",
    "multi-currency",
    "money-utils",
    "liquid",
    "frontend",
    "theme-development"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reimabenson/shopify-money-format-utils.git"
  },
  "bugs": {
    "url": "https://github.com/reimabenson/shopify-money-format-utils/issues"
  },
  "homepage": "https://github.com/reimabenson/shopify-money-format-utils#readme",
  "author": "Reima",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^3.9.0",
    "vitest": "^2.0.0"
  }
}
